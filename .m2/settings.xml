<settings>
    <servers>
        <server>
            <id>ossrh</id>
            <username>${JIRA_USERNAME}</username>
            <password>${JIRA_PASSWORD}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>ossrh</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <gpg.executable>gpg2</gpg.executable>
                <gpg.passphrase>${GPG_PASS_PHRASE}}</gpg.passphrase>
            </properties>
        </profile>
    </profiles>
</settings>